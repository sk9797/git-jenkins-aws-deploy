pipeline {
    agent any
    environment {
    AWS_DEFAULT_REGION = "ap-south-1"
    AWS_ACCESS_KEY_ID = "AKIAVGIPNHVQD74KR25M"
    AWS_SECRET_ACCESS_KEY = "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"
    PROJECT_FOLDER = "."
    PROJECT_NAME = "git-jenkins-aws-deploy"
  }
    stages {
    stage('npm install') {
        steps{
          bat "npm install"
          echo 'npm install finished'
      }
    }
    stage('Build Stage') {
        steps {
          echo 'npm build started'
          bat "npm run ng build"
          echo 'npm build finished'
      }
    }
  }
  post{
    success{
      dir("${PROJECT_FOLDER}"){
        echo 'Archiving build artifacts...'
        archiveArtifacts artifacts: "dist/${PROJECT_NAME}/*.*", onlyIfSuccessful: true
        echo 'Archived build artifacts successfully'
      }
    }
  }
}